---
import { Image } from "astro:assets";
---

<header
  class="site-header sticky top-0 z-50 w-full border-b border-border bg-background/95 backdrop-blur supports-backdrop-filter:bg-background/60 [container-type:scroll-state] [container-name:site-header]"
>
  <div class="header-content mx-auto h-16 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 font-semibold text-lg">
      <Image
        src="/images/astro-logo.png"
        alt="My Astro Site Logo"
        width={48}
        height={48}
        class="w-12 h-12 aspect-square object-cover"
      />
      <span>DocsBlog</span>
    </a>

    <nav class="hidden md:flex items-center gap-8">
      <a
        href="/"
        class="text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
      >
        Home
      </a>
      <a
        href="/blogs"
        class="text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
      >
        Blog
      </a>
      <a
        href="/docs"
        class="text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
      >
        Documentation
      </a>
    </nav>
  </div>
</header>
