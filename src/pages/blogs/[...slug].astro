---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { Clock, Calendar, UserPen } from "@lucide/astro";
import { Image } from "astro:assets";
import { getReadingTime } from "@/lib/utils";
import Layout from "@/layouts/layout.astro";
import Badge from "@/components/ui/badge.astro";
import { Card } from "@/components/ui/card";
import Button from "@/components/ui/button.astro";

export async function getStaticPaths() {
  const blogCollection: CollectionEntry<"blogs">[] =
    await getCollection("blogs");
  return blogCollection.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, remarkPluginFrontmatter, headings } = await entry.render();
// Get the raw markdown content to calculate reading time
const blogCollection = await getCollection("blogs");
const currentBlog = blogCollection.find((b) => b.slug === entry.slug);
const rawContent = currentBlog?.body || "";
const readingTime = getReadingTime(rawContent);
console.log("Reading time:", headings);
---

<Layout title={entry.data.title}>
  <article>
    <header class="mx-auto pb-6 md:pb-12 border-b">
      <h1 class="heading-page mb-6">{entry.data.title}</h1>
      <div class="flex items-center gap-6 text-sm text-muted-foreground mb-8">
        <span class="flex items-center gap-2">
          <Calendar class="w-4 h-4" />
          {
            entry.data.pubDate.toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </span>
        <span class="flex items-center gap-2">
          <Clock class="w-4 h-4" />
          {readingTime} min read
        </span>
        <span class="flex items-center gap-2">
          <UserPen class="w-4 h-4" /> By {entry.data.author}</span
        >
      </div>
      {
        entry.data.tags && (
          <div class="flex gap-2">
            {entry.data.tags.map((tag, index) => (
              <Badge
                variant={index % 2 !== 0 ? "secondary" : "outline"}
                size="sm"
              >
                {tag}
              </Badge>
            ))}
          </div>
        )
      }
    </header>

    {
      entry.data.image && (
        <div class="rounded-sm overflow-hidden mb-6">
          <Image
            src={entry.data.image}
            alt={entry.data.title}
            class="w-full aspect-video md:aspect-21/9 object-cover mx-auto"
          />
        </div>
      )
    }
    <div class="grid lg:grid-cols-[1fr_280px] gap-8 lg:gap-12 mt-8 lg:mt-12">
      <div class="prose mx-auto max-w-none w-full">
        <Content />
      </div>
      <aside class="hidden lg:block">
        {
          headings.length > 1 && (
            <dive class="sticky top-24 mx-auto">
              <h3 class="text-xl font-semibold mb-4">On this page</h3>
              <ul class="space-y-2 text-sm text-muted-foreground border-l border-border/40 ">
                {headings.map(
                  (heading) =>
                    heading.depth < 4 && (
                      <li class="border-l-2 border-transparent hover:border-accent">
                        <Button
                          href={`#${heading.slug}`}
                          variant="ghost"
                          size="sm"
                          class="w-full border-radius-0 justify-start overflow-hidden rounded-none white-space-wrap inline-block"
                        >
                          {heading.text}
                        </Button>
                      </li>
                    ),
                )}
              </ul>
            </dive>
          )
        }
      </aside>
    </div>
  </article>
</Layout>
